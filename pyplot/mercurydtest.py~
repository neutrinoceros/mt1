# -*-coding:utf-8-*-

# --------------------------------------------------
# Plotting script 
# prints Mercury's distance from it's starting point  
# --------------------------------------------------

from pybox import *

def distance(p1,p2) :
    #assumes p1 and p2 are 1D array-likes of equal lenght 
    d = np.sqrt(np.sum(p1-p2)**2) 
    return d

point = np.zeros(3)
pos   = np.ones(3)

print distance(point,pos)
#------------------------------
#        data loading
#------------------------------

tab   = np.loadtxt("./results/traj.dat")
n_bod = tab.shape[1]/3
